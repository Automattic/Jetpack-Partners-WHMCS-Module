<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.6/phpunit.xsd"
    bootstrap="tests/_bootstrap.php"
>
    <testsuites>
        <testsuite name="Provisioning Module Tests">
            <directory suffix=".php">./tests/provisioning</directory>
        </testsuite>
	<testsuite name="Addon Module Tests">
            <directory suffix=".php">./tests/addon</directory>
        </testsuite>
    </testsuites>
</phpunit>
